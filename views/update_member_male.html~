				<script type="text/javascript">

				var suggested_mothers = [{suggested_mothers}];
				var already_wives = [{already_wives}];
				var wives = new Array();
	
				var wife_index = {wife_index};
				var daughter_index = {daughter_index};
				var son_index = {son_index};

				// Configurations.
				var saved_values = Array();
				var default_value = "";
	
				$(function(){
				
					// Set the mother to be sidrahAutoComplete object.
					$(".sidrah-mother-autocomplete").sidrahAutoComplete({
						type: 'mother', suggested: suggested_mothers
					});

					// Update education.
					$(".education").val({education});
		
					// Update major.
					$(".major").val('{major}');
		
					// Add an initial wife.
					add_wife();
		
					// Add an initial son.
					add_son();
		
					// Add an initial daughter.
					add_daughter();
		
					// Set the birth date.
					$("#dob_d").val({dob_d});
					$("#dob_m").val({dob_m});
					
					// Set the death date.
					$("#dod_d").val({dod_d});
					$("#dod_m").val({dod_m});
					
					{js_on_load}
					
					$(".inputform").submit(function(){
						
						// Remove all warning classes.
						$("#p_mother").removeClass("warning");
						$("#p_mobile").removeClass("warning");
						$("#p_location").removeClass("warning");
						$("#p_pob").removeClass("warning");
						$("#p_dob").removeClass("warning");
						
						
						// Check if the mother is empty.
						if ($(".sidrah-mother-autocomplete").val() == "")
						{
							alert("الرجاء إدخال اسم الأم.");
							$("#p_mother").addClass("warning");
							return false;
						}
						
						var mobile = parseInt($("#input_mobile").val());
						
						if (isNaN(mobile) || mobile == 0)
						{
							alert("الرجاء إدخال رقم الجوّال.");
							$("#p_mobile").addClass("warning");
							return false;
						}
						
						if ($("#input_location").val() == "")
						{
							alert("الرجاء إدخال مكان الإقامة الحاليّ.");
							$("#p_location").addClass("warning");
							return false;
						}
						
						var dob_y = parseInt($('#dob_y').val());
						
						if ($('#dob_d').val() == "0" || $('#dob_m').val() == "0" || isNaN(dob_y) || dob_y == 0)
						{
							alert("الرجاء إدخال تاريخ الميلاد.");
							$("#p_dob").addClass("warning");
							return false;
						}
						
						if ($("#input_pob").val() == "")
						{
							alert("الرجاء إدخال مكان الميلاد");
							$("#p_pob").addClass("warning");
							return false;
						}
						
						var wives_count = 0;
						
						// Check the wives if the man is married.
						$(".wife").each(function (k, v){
							if (v.value != "")
							{
								wives_count++;
							}
						});
						
						// Check if the man is married and has no wives.
						if ($(".marital_status").val() == 2 && wives_count == 0)
						{
							alert("الرجاء إدخال زوجة واحدة على الأقل.");
							return false;
						}
						
						// Walk up-on children.
						var children_count = 0;
						
						$(".childnamein").each(function(k, v){
							if (v.value != "")
							{
								children_count++;
							}
						});
						
						if (wives_count == 0 && children_count > 0)
						{
							alert("الرجاء إدخال اسم والدة الأبناء.");
							return false;
						}
						
						var non_entered_husbands = 0;
						
						// Walk up-on daughters to check husband names.
						$(".daughter_ms_select").each(function(index){
						
							var _husband = $(".sidrah-daughter-husband-autocomplete:eq(" + index + ")").val();
							var _value = $(".daughter_ms_select:eq(" + index + ")").val();
							
							// Check if one of the daughters is married/divorced/widow.
							if (_value != 1 && _husband == "")
							{
								non_entered_husbands++;
							}
						});
						
						if (non_entered_husbands > 0)
						{
							alert("الرجاء إدخال اسم زوج أو طليق البنت.");
							return false;
						}

					});
				});
	
				// Add a wife input field
				function add_wife()
				{
					var marital_status = '<select name="wife_marital_status[' + wife_index + ']"><option value="2">زوجة</option><option value="3">طليقة</option></select> <select name="wife_is_alive[' + wife_index + ']"><option value="1">حيّة ترزق</option><option value="0">متوفّاة</option></select>';
					var one_wife = '<p><input class="sidrah-wife-autocomplete" type="text" name="wife[' + wife_index + ']" size="30" placeholder="[اسم الزوجة] [الأب] [الجد] [العائلة]" /> ' + marital_status + '</p>';

					$("#more_wives").append(one_wife);
		
					// Set the wives to be sidrahAutoComplete object.
					$(".sidrah-wife-autocomplete").sidrahAutoComplete({
						type: 'wife', class_to_walk: 'wife'
					}, function(){
						update_wives();
					});
		
					wife_index--;
				}
	
				// Add a son input field
				function add_son()
				{
					var son_additional = '<td><select name="son_is_alive[' + son_index + ']"><option value="1">حيّ يرزق</option><option value="0">متوفّى</option></select></td><td><input type="text" placeholder="رقم الجوّال" name="son_mobile[' + son_index + ']" size="8" /></td><td><select name="son_dob_d[' + son_index + ']"><option value="0"></option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9">9</option><option value="10">10</option><option value="11">11</option><option value="12">12</option><option value="13">13</option><option value="14">14</option><option value="15">15</option><option value="16">16</option><option value="17">17</option><option value="18">18</option><option value="19">19</option><option value="20">20</option><option value="21">21</option><option value="22">22</option><option value="23">23</option><option value="24">24</option><option value="25">25</option><option value="26">26</option><option value="27">27</option><option value="28">28</option><option value="29">29</option><option value="30">30</option></select> <select name="son_dob_m[' + son_index + ']"><option value="0"></option><option value="1">محرم</option><option value="2">صفر</option><option value="3">ربيع الأول</option><option value="4">ربيع الثاني</option><option value="5">جمادى الأولى</option><option value="6">جمادى الثانية</option><option value="7">رجب</option><option value="8">شعبان</option><option value="9">رمضان</option><option value="10">شوال</option><option value="11">ذو القعدة</option><option value="12">ذو الحجة</option></select> <input type="text" placeholder="0000" name="son_dob_y[' + son_index + ']" size="2" /></td>';
					var one_son = '<tr><td class="childname"><input class="childname childnamein" type="text" name="son[' + son_index + ']" placeholder="[الاسم الأول]" /></td><td><select class="moms" name="son_mom[' + son_index + ']"></select></td>' + son_additional + '</tr>';
					
					$("#sons_table").append(one_son);
					update_wives();
					son_index--;
				}

				// Add a daughter input field
				function add_daughter()
				{
					var il_daughter = '<td><select name="daughter_is_alive[' + daughter_index + ']"><option value="1">حيّة ترزق</option><option value="0">متوفّاة</option></select></td><td><input type="text" placeholder="رقم الجوّال" name="daughter_mobile[' + daughter_index + ']" size="8" /></td>';
					var dob_daughter = '<td><select name="daughter_dob_d[' + daughter_index + ']"><option value="0"></option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9">9</option><option value="10">10</option><option value="11">11</option><option value="12">12</option><option value="13">13</option><option value="14">14</option><option value="15">15</option><option value="16">16</option><option value="17">17</option><option value="18">18</option><option value="19">19</option><option value="20">20</option><option value="21">21</option><option value="22">22</option><option value="23">23</option><option value="24">24</option><option value="25">25</option><option value="26">26</option><option value="27">27</option><option value="28">28</option><option value="29">29</option><option value="30">30</option></select> <select name="daughter_dob_m[' + daughter_index + ']"><option value="0"></option><option value="1">محرم</option><option value="2">صفر</option><option value="3">ربيع الأول</option><option value="4">ربيع الثاني</option><option value="5">جمادى الأولى</option><option value="6">جمادى الثانية</option><option value="7">رجب</option><option value="8">شعبان</option><option value="9">رمضان</option><option value="10">شوال</option><option value="11">ذو القعدة</option><option value="12">ذو الحجة</option></select> <input type="text" placeholder="0000" name="daughter_dob_y[' + daughter_index + ']" size="2" /></td>';
					var ms_daughter = '<td><select onchange="daughter_husband_toggle(this.name)" name="daughter_marital_status[' + daughter_index + ']" id="dm_' + daughter_index + '" class="daughter_ms_select"><option value="1">عزباء</option><option value="2">متزوجة</option><option value="3">طليقة</option><option value="4">أرملة</option></select></td><td><input type="text" placeholder="اسم الزوج (رباعي)" name="daughter_husband_name[' + daughter_index + ']" style="display: none;" class="sidrah-daughter-husband-autocomplete" id="daughter_husband_' + daughter_index + '"/></td>';
					var one_daughter = '<tr><td class="childname"><input class="childname childnamein" type="text" name="daughter[' + daughter_index + ']" placeholder="[الاسم الأول]" /></td><td><select class="moms" name="daughter_mom[' + daughter_index + ']"></select></td>' + il_daughter + dob_daughter + ms_daughter + '</tr>';		

					$("#daughters_table").append(one_daughter);

					$(".sidrah-daughter-husband-autocomplete").sidrahAutoComplete({
						type: 'husband'
					});

					update_wives();
					daughter_index--;
				}

				// Update the wives
				function update_wives()
				{
					wives = []; // Empty the list.
					wives = wives.concat(already_wives); // Copy the wives from database.

					var temp = $(".wife");
		
					for(var i=0; i<temp.length; i++)
					{
						var _wname = temp[i].value;
			
						if (_wname != "")
						{
							var wnameobj = temp[i].name;
							var _id = wnameobj.substring(5, wnameobj.length-1);
				
							// Set the default value
							if (default_value == "")
							{
								default_value = _id;
							}
					
							if (!is_inside_already_wives(_wname))
							{
								// Add the wife to the array
								wives.push({id: _id, name: _wname});
							}
						}
					}
		
					$.each($(".moms"), function(k, v){
						saved_values[k] = v.value;
					});
		
					$(".moms").html("");
		
					for (var j=0; j<wives.length; j++)
					{
						var wife_names = wives[j].name.split(/\s/);
						var short_name =  wife_names[0] + ' ' + wife_names[1] + ' ' + wife_names[2] + ' ' + wife_names[wife_names.length-1];
						
						$(".moms").append("<option value='" + wives[j].id + "'>" + short_name + "</option>\n");
					}
		
					$.each($(".moms"), function(k, v){
		
						var val;
			
						if (saved_values[k] == "")
						{
							val = default_value;
						}
						else
						{
							val = saved_values[k];
						}
			
						if (val != "")
						{
							v.value = val;
						}
					});
		
					update_sons_daughters();
				}
	
				function is_inside_already_wives(name)
				{
					for(var i=0; i<already_wives.length; i++)
					{
						if (already_wives[i].name == name)
						{
							return true;
						}
					}
					
					return false;
				}
	
				function update_sons_daughters()
				{
					if (wives.length == 0)
					{
						$(".sons_daughters").hide();
					}
					else
					{
						$(".sons_daughters").show();
					}
				}

				function daughter_husband_toggle(id)
				{
					var n = id.substring(id.indexOf("[")+1, id.length-1);
					var dms = $("#dm_" + n).val();
		
					if (dms != 1)
					{
						$("#daughter_husband_" + n).show();
					}
					else
					{
						$("#daughter_husband_" + n).hide();
					}
				}

				function update_son_mom_id(id, mom_id)
				{
					$("#son_mom_id_" + id).val(mom_id);
				}
	
				function update_son_is_alive(id, is_alive)
				{
					$("#son_is_alive_" + id).val(is_alive);
				}
				
				function update_son_dob_d(id, dob_d)
				{
					$("#son_dob_d_" + id).val(dob_d);
				}
	
				function update_son_dob_m(id, dob_m)
				{
					$("#son_dob_m_" + id).val(dob_m);
				}
	
				function update_daughter_mom_id(id, mom_id)
				{
					$("#daughter_mom_id_" + id).val(mom_id);
				}

				function update_daughter_is_alive(id, is_alive)
				{
					$("#daughter_is_alive_" + id).val(is_alive);
				}
				
				function update_daughter_dob_d(id, dob_d)
				{
					$("#daughter_dob_d_" + id).val(dob_d);
				}
	
				function update_daughter_dob_m(id, dob_m)
				{
					$("#daughter_dob_m_" + id).val(dob_m);
				}
	
				function update_daughter_marital_status(id, ms)
				{
					$("#dm_" + id).val(ms);
				}
	
				function update_mother_ms(ms)
				{
					$(".mom_marital_status").val(ms);
				}
	
				function update_mother_is_alive(is_alive)
				{
					$(".mom_is_alive").val(is_alive);
				}
	
				function update_wife_marital_status(id, ms)
				{
					$("#wife_marital_status_" + id).val(ms);
				}
	
				function update_wife_is_alive(id, is_alive)
				{
					$("#wife_is_alive_" + id).val(is_alive);
				}

				function update_marital_status(status)
				{
					$(".marital_status").val(status);
				}
	
				function update_is_alive(is_alive)
				{
					$(".is_alive").val(is_alive);
		
					if (is_alive == 0)
					{
						$(".date_of_death").show();
					}
					else
					{
						$(".date_of_death").hide();

						$("#dod_d").val("0");
						$("#dod_m").val("0");
						$("#dod_y").val("0000");
					}
				}

